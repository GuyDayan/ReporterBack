{
  "name": "functions",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "emulator": "firebase emulators:start --only functions --project reporter-6a0f1",
    "emu:persist": "firebase emulators:start --import ./.emulator-data --export-on-exit ./.emulator-data"
  },
  "engines": {
    "node": "22"
  },
  "main": "lib/index.js",
  "dependencies": {
    "axios": "^1.11.0",
    "firebase-admin": "^12.6.0",
    "firebase-functions": "^6.0.1",
    "libphonenumber-js": "^1.12.13"
  },
  "devDependencies": {
    "firebase-functions-test": "^3.1.0",
    "typescript": "^5.7.3"
  },
  "private": true
}
